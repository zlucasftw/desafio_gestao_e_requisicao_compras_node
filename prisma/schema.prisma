generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  APPROVER
}

enum Status {
  DRAFT
  SUBMITTED
  APPROVED
  REJECTED
}

model Users {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  purchaseRequests  PurchaseRequests[]
  approvalHistories ApprovalHistory[]
}

model PurchaseRequests {
  id          String   @id @default(uuid())
  title       String    
  description String?  @db.VarChar(255)
  quantity    Int

  totalPrice  Decimal   @db.Decimal(10, 2)

  status      Status   @default(DRAFT)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products    RequestItems[]
  histories   ApprovalHistory[]

  userId      String
  user        Users    @relation(fields: [userId], references: [id])
}

model RequestItems {
  id                String    @id @default(uuid())
  title             String
  description       String?   @db.VarChar(255)
  
  quantity          Int
  price             Decimal   @db.Decimal(10, 2)

  productId         String
  createdAt         DateTime  @default(now())

  purchaseRequestId String
  purchaseRequest   PurchaseRequests @relation(fields: [purchaseRequestId], references: [id])
}

model ApprovalHistory {
  id                String   @id @default(uuid())
  action            String
  reason            String   @db.VarChar(255)
  oldStatus         Status
  newStatus         Status
  createdAt         DateTime @default(now())

  approverId        String
  approver          Users @relation(fields: [approverId], references: [id])

  purchaseRequestId String
  purchaseRequest   PurchaseRequests @relation(fields: [purchaseRequestId], references: [id])
}

